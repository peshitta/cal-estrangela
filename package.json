{
  "name": "cal-estrangela",
  "version": "1.0.0",
  "description": "Utility to convert between CAL code and Estrangela ASCII font",
  "main": "build/cal-estrangela.js",
  "module": "build/cal-estrangela.esm.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "npm run doc && npm run lint && npm run rollup && npm run min && npm run test",
    "min": "uglifyjs ./build/cal-estrangela.js -o ./build/cal-estrangela.min.js -c dead_code,toplevel,comparisons,unsafe=true,unsafe_Func=true,unsafe_comps=true -m toplevel --comments",
    "rollup": "rollup -c",
    "lint": "eslint src/*.js",
    "doc": "jsdoc2md -t src/README.hbs src/*.js > README.md",
    "test": "nyc mocha"
  },
  "nyc": {
    "include": [
      "build/cal-estrangela.min.js"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-plusplus": 0,
      "comma-dangle": 0,
      "no-nested-ternary": 0,
      "arrow-parens": 0
    },
    "env": {
      "mocha": true,
      "node": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peshitta/cal-estrangela.git"
  },
  "keywords": [
    "CAL",
    "Estrangela",
    "Peshitta",
    "Peshitto",
    "Sedra.js",
    "Sedrajs",
    "Aramaic",
    "Mapper",
    "Converter"
  ],
  "author": "Greg Borota <pshitto@gmail.com> (https://peshitta.github.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peshitta/cal-estrangela/issues"
  },
  "homepage": "https://github.com/peshitta/cal-estrangela#readme",
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jsdoc-to-markdown": "^3.0.0",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "rollup": "^0.49.2",
    "rollup-plugin-buble": "^0.15.0",
    "uglify-js": "^3.0.28"
  },
  "dependencies": {
    "sedra-cal": "^1.0.2"
  }
}
